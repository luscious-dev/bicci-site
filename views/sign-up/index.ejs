    <section class="sign-up">
      <div class="container">
        <h1>Register a new account</h1>
        <div class="grid">
          <div class="col col-1">
            <p><span>*</span> indicates a required field</p>
            <label for="sign-up-fname">First Name</label>
            <div class="field">
