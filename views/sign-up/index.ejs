              />
              <div class="error">
                <!--  -->
                This field is required
                <!--  -->
              </div>
            </div>

            <label for="sign-up-password">Password</label>
            <div class="field">
              <input type="password" placeholder="At Least 6 Characters" id="sign-up-password" />
              
              <div class="error">
                <!--  -->
                This field is required
                <!--  -->
              </div>
            </div>
            <label for="sign-up-vpassword">Verify Password</label>
            <div class="field ">
              <input type="password " id="sign-up-vpassword" />
              <div class="error">
                <!--  -->
                This field is required
                <!--  -->
              </div>
            </div>

            <footer>
              <button class="button" type="submit">
                Register Account
              </button>
            </footer>
          </div>
      </div>
